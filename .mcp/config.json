{
  "mcpServers": {
    "synapse": {
      "command": "synapse",
      "args": ["--mcp"],
      "env": {
        "GRAPH_STORAGE_PATH": "/data/graphs"
      },
      "description": "Synapse Core - RDF + Vector memory"
    },
    "swarm": {
      "command": "python3",
      "args": ["scripts/swarm_mcp.py"],
      "description": "Agent Swarm Control - Run agents and query memory"
    }
  },
  "tools": {
    "run_swarm": {
      "server": "swarm",
      "description": "Run the full agent swarm flow"
    },
    "run_agent": {
      "server": "swarm",
      "description": "Run a specific agent (orchestrator, coder, reviewer, deployer)"
    },
    "query_memory": {
      "server": "swarm",
      "description": "Query or update Synapse memory"
    }
  }
}
